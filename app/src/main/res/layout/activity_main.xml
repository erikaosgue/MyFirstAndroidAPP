<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="29dp"
        android:layout_marginTop="84dp"
        android:text="@string/weight_title"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterWeightId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jupiterCheckBox"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/showWeightButtonId"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="@string/show_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterWeightId" />

    <!--    android:onClick="onCheckBoxClicked"-->

    <TextView
        android:id="@+id/resultTextViewId"
        android:layout_width="174dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showWeightButtonId" />

    <CheckBox
        android:id="@+id/marsCheckBox"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:text="Mars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

<!--    android:onClick="onCheckBoxClicked"-->
    <CheckBox
        android:id="@+id/jupiterCheckBox"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Jupiter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earthCheckBox" />

<!--    android:onClick="onCheckBoxClicked"-->
    <CheckBox
        android:id="@+id/earthCheckBox"
        android:layout_width="138dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Earth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marsCheckBox" />

    <ImageView
        android:id="@+id/imageViewId"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/earthCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

</androidx.constraintlayout.widget.ConstraintLayout>